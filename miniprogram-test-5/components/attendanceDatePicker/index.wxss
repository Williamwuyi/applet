/* components/attendacneDatePicker/index.wxss */
.inlineblock{
  display:inline-block;
  height: 50rpx;
  line-height: 50rpx;
  color:#fff;
}
.buttonCancel{
  background: rgb(33, 158, 33);
  float: left;
  margin-left: 10rpx;
}
.buttonConfirm{
  background: rgb(33, 120, 235);
  float: right;
  margin-right: 10rpx;
}
.picker {
  /* position: relative; */
  -webkit-text-size-adjust: 100%; 
  -webkit-user-select: none;
  user-select: none;
  width:100%;   
  height:100%;   
  top:0;   
  background:rgba(0,0,0,0.5);   
  overflow: hidden;   
  /*要显示在wrap的上面 */   
  z-index: 2;   
  position: fixed;

}
.picker2{
  z-index: 100;   
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
}